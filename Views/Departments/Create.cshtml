@model SamaERP.Models.ACCDepartments
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@addTagHelper *, AuthoringTagHelpers
@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="right_col" role="main">



    <div class="x_content">

        <br />

        <form asp-route-area="Accounting" asp-controller="Departments" asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label for="inputAddress">Department  Name</label>
                <input asp-for="DepartmentName" required type="text" class="form-control" id="inputAddress" placeholder="Department Name">
                <span asp-validation-for="DepartmentName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="inputAddress">Description</label>
                <input asp-for="Disciption" type="text" class="form-control" id="inputAddress" placeholder="Description">
                <span asp-validation-for="Disciption" class="text-danger"></span>
            </div>


            <input type="hidden" asp-for="AddedBy" value=" @User.Identity.Name" />
            <input type="hidden" asp-for="AddingDate" value="@DateTime.UtcNow.AddHours(3)" />
            <input type="hidden" asp-for="ActiveOrNot" value="1" />


            <button type="submit" class="btn btn-success">Add New Departement</button>

        </form>


    </div>

    <br />




</div>
