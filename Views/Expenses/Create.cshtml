@model SamaERP.Models.Expense

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="right_col" role="main">
    <div class="x_content">
        <div class="row">
            <div class="col-12">
                <form asp-action="Create">
                    <div class="form-row">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group col-6">
                            <label asp-for="ExpenseType" class="control-label"></label>
                            <input asp-for="ExpenseType" class="form-control" placeholder="Expense Type" />
                            <span asp-validation-for="ExpenseType" class="text-danger"></span>
                        </div>
                        <div class="form-group col-6">
                            <label asp-for="PaymentAccount" class="control-label"></label>
                            <select class="form-control bg-transparent" asp-for="PaymentAccount">
                                <option>---Choose Payment Account---</option>
                                <option value="Cash In Hand">Cash In Hand</option>
                                <option value="Cash At Bank">Cash At Bank</option>

                            </select>
                            <span asp-validation-for="PaymentAccount" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="form-row">
                        <div class="form-group col-6">
                            <label asp-for="Amount" class="control-label"></label>
                            <input asp-for="Amount" class="form-control" placeholder="Amount" />
                            <span asp-validation-for="Amount" class="text-danger"></span>
                        </div>
                        <div class="form-group col-6">
                            <label asp-for="Currency" class="control-label"></label>
                            <select class="form-control bg-transparent" asp-for="Currency">
                                <option>---Choose Currency---</option>
                                <option value="IQD">IQD</option>
                                <option value="USD">USD</option>

                            </select>
                            <span asp-validation-for="Currency" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <label asp-for="ExpenseData" class="control-label"></label>
                        <input asp-for="ExpenseData" class="form-control" placeholder="Expense Date" />
                        <span asp-validation-for="ExpenseData" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Add New Expense" class="btn btn-success" />
                    </div>
                </form>
            </div>
        </div>

        <div>
            <a asp-action="Index">Back to List</a>
        </div>


    </div>
</div>
