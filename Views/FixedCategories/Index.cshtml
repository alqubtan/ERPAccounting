@model IEnumerable<SamaERP.Models.ACCFixedCategory>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="right_col" role="main">
    <div class="">

        <div class="page-title">
            <div class="title_left">
                <h2>Sama ERP <small>Fixed Assets Categories</small></h2>
            </div>
            <form asp-area="FixedCategories" asp-controller="FixedCategories" asp-action="Index" method="get">
                <div class="title_right">
                    <div class="col-md-5 col-sm-5 col-xs-12 form-group pull-right top_search">
                        <div class="input-group">
                            <input name="SearchString" type="text" class="form-control" value="@ViewData["CurrentFilter"]" placeholder="Search for...">
                            <span class="input-group-btn">
                                <button class="btn btn-secondary" type="submit">Search</button>
                            </span>
                        </div>
                    </div>
                </div>
            </form>
        </div>
        <a style="font-size:small;" class="btn btn-secondary pb-2 mb-0" asp-controller="FixedCategories" asp-action="Create"> Add New Category <span class="fa fa-pencil"></span></a>

        <div class="row">
            <div class="col-md-12 col-sm-12 ">
                <div class="x_panel">

                    <div class="x_content">
                        <div class="row">
                            <div class="col-sm-12">
                                <div class="card-box table-responsive">
                                    <table class="table table-bordered table-striped">
                                        <thead style="background-color:white;">
                                            <tr>
                                                <th>
                                                    <a asp-controller="FixedCategories" asp-action="Index" asp-route-sortOrder="@ViewData["Col1SortParm"]" asp-route-currentFilter="@ViewData["CurrentFilter"]">Category Name</a>
                                                </th>
                                                <th>
                                                    <a asp-controller="FixedCategories" asp-action="Index" asp-route-sortOrder="@ViewData["Col2SortParm"]" asp-route-currentFilter="@ViewData["CurrentFilter"]">Description</a>
                                                </th>
                                                <th>
                                                </th>

                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var item in Model)
                                            {
                                                <tr>
                                                    <td class="mt-1 mb-1 pt-1 pb-1 align-middle">
                                                        @Html.DisplayFor(modelItem => item.CategoryName)
                                                    </td>
                                                    <td class="mt-1 mb-1 pt-1 pb-1 align-middle">
                                                        @Html.DisplayFor(modelItem => item.Description)
                                                    </td>

                                                    <td class="mt-1 mb-1 pt-1 pb-1 align-middle">
                                                        <div class="tools">
                                                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary  btn-sm"><i class="fa fa-pencil" data-toggle="tooltip" data-placement="top" title="Edit"></i></a>
                                                            <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-success  btn-sm"><i class="fa fa-list" data-toggle="tooltip" data-placement="top" title="Details"></i></a>
                                                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger  btn-sm"><i class="fa fa-trash" data-toggle="tooltip" data-placement="top" title="Delete"></i></a>

                                                        </div>
                                                    </td>

                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>