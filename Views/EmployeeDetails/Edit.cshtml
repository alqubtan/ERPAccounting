@model SamaERP.Models.ACCEmployeeDetails

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<div class="right_col" role="main">



    <div class="x_content">
        <br />

        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />

            <div class="form-group">
                <label>Employee  Name</label>
                <input asp-for="EmployeeName" required type="text" class="form-control" id="inputAddress" placeholder="Employee Name">
                <span asp-validation-for="EmployeeName" class="text-danger"></span>
            </div>
            <div class="form-row">
                <div class="form-group col-md-6">
                    <label for="inputEmail4">Phone Number</label>
                    <input asp-for="PhoneNo" type="text" class="form-control" id="inputEmail4" placeholder="Phone Number">
                    <span asp-validation-for="PhoneNo" class="text-danger"></span>
                </div>
                <div class="form-group col-md-6">
                    <label>E-mail</label>
                    <input asp-for="Email" type="email" class="form-control" id="inputPassword4" placeholder="E-mail">
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group">
                <label>Address</label>
                <input asp-for="Addr" type="text" class="form-control" id="inputAddress2" placeholder="Address........">
                <span asp-validation-for="Addr" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label>Department </label>
                <select asp-for="Department" required class="pull-left form-control " asp-items="ViewBag.Departments"></select>
                <span asp-validation-for="Department" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label>Job Title</label>
                <input asp-for="JobTitle" required type="text" class="form-control" id="inputAddress2" placeholder="Job Title">
                <span asp-validation-for="JobTitle" class="text-danger"></span>
            </div>

            <input type="hidden" asp-for="AddedBy" value=" @User.Identity.Name" />
            <input type="hidden" asp-for="AddingDate" value="@DateTime.UtcNow.AddHours(3)" />
            <input type="hidden" asp-for="ActiveOrNot" value="1" />



            <div class="col-md-9 col-sm-9">

                <button type="submit" class="btn btn-success">Update Employee Details</button>
            </div>



        </form>


    </div>


</div>

