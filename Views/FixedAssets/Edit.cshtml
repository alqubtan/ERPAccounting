@model SamaERP.Models.ACCFixedAssets

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="right_col" role="main">



    <div class="x_content">
        <br />

        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="AssetName" class="control-label">Assets Name</label>
                <input asp-for="AssetName" class="form-control" placeholder="Asset Name" />
                <span asp-validation-for="AssetName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" placeholder="Description" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-row">
                <div class="form-group col-6">
                    <label asp-for="Category" class="control-label"></label>
                    <input asp-for="Category" class="form-control" placeholder="Category" />
                    <span asp-validation-for="Category" class="text-danger"></span>
                </div>
                <div class="form-group col-6">
                    <label asp-for="EstimatedValue" class="control-label"></label>
                    <input asp-for="EstimatedValue" class="form-control" placeholder="Estimated Value" />
                    <span asp-validation-for="EstimatedValue" class="text-danger"></span>
                </div>
            </div>
            <div class="form-row">
                <div class="form-group col-6">
                    <label asp-for="BrandName" class="control-label"></label>
                    <input asp-for="BrandName" class="form-control" placeholder="Brand Name" />
                    <span asp-validation-for="BrandName" class="text-danger"></span>
                </div>
                <div class="form-group col-6">
                    <label asp-for="Quantity" class="control-label"></label>
                    <input asp-for="Quantity" class="form-control" placeholder="Quantity" />
                    <span asp-validation-for="Quantity" class="text-danger"></span>
                </div>
            </div>

            <input type="hidden" asp-for="AddedBy" value=" @User.Identity.Name" />
            <input type="hidden" asp-for="AddingDate" value="@DateTime.UtcNow.AddHours(3)" />
            <input type="hidden" asp-for="ActiveOrNot" value="1" />
            <div class="form-group">
                <input type="submit" value="Update Asset" class="btn btn-success" />
            </div>
        </form>


    </div>


</div>

